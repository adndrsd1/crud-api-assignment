<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_item_gambar"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/img_item_gambar"
            android:layout_toRightOf="@id/img_item_gambar"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:text="Nama Makanan" />

        <TextView
            android:id="@+id/tv_item_asal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_name"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/img_item_gambar"
            android:layout_toRightOf="@id/img_item_gambar"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="Asal Daerah" />

        <TextView
            android:id="@+id/tv_item_bahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_asal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/img_item_gambar"
            android:layout_toRightOf="@id/img_item_gambar"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="Bahan Utama" />

        <TextView
            android:id="@+id/tv_item_cara_buat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_bahan"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/img_item_gambar"
            android:layout_toRightOf="@id/img_item_gambar"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="Cara Membuat" />

        <TextView
            android:id="@+id/tv_item_rasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_cara_buat"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/img_item_gambar"
            android:layout_toRightOf="@id/img_item_gambar"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="Cita Rasa" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>